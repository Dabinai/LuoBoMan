<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_com_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dabin.www.luobomvp.commodi.view.ComShowActivity">
    <com.dabin.www.luobomvp.widget.media.IjkVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="标题："
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/comshow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="原价："
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/comshow_bargainPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="现价："
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/comshow_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="火线热销："
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/comshow_subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RadioGroup
        android:layout_marginTop="100dp"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/kefu"
            android:background="@color/darksalmon"
            android:textSize="15dp"
            android:text="客服"
            style="@style/MainStyle"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/shangchang"
            android:background="@color/darksalmon"
            android:textSize="15dp"
            android:text="商场"
            style="@style/MainStyle"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/lianxi"
            android:background="@color/darksalmon"
            android:textSize="15dp"
            android:text="联系"
            style="@style/MainStyle"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/jiaru"
            android:text="加入购物车"
            android:background="@color/orange"
            android:textSize="18dp"
            style="@style/MainStyle"
            android:layout_weight="2"
            />
        <RadioButton
            android:id="@+id/gouami"
            android:background="@color/orange"
            android:textSize="18dp"
            android:text="立即购买"
            style="@style/MainStyle"
            android:layout_weight="2"
            />
    </RadioGroup>
</LinearLayout>
