<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_com_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dabin.www.luobomvp.comshow.view.ComShowActivity">
    <com.dou361.ijkplayer.widget.IjkVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <com.youth.banner.Banner
        android:id="@+id/comshow_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="标题："
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/comshow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="原价："
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/comshow_bargainPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="现价："
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/comshow_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="火线热销："
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/comshow_subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>




    <RadioGroup
        android:layout_marginTop="30dp"
        android:background="@color/goldenrod"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/kefu"
            android:textSize="15dp"
            android:text="客服"
            android:textColor="@color/lemonchiffon"
            style="@style/MainStyle"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/shangchang"
            android:textSize="15dp"
            android:text="商场"
            android:textColor="@color/lemonchiffon"
            style="@style/MainStyle"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/lianxi"
            android:textSize="15dp"
            android:text="联系"
            android:textColor="@color/lemonchiffon"
            style="@style/MainStyle"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/jiaru"
            android:text="加入购物车"
            android:textSize="20dp"
            android:textColor="@color/lemonchiffon"
            style="@style/MainStyle"
            android:layout_weight="2"
            />
        <RadioButton
            android:id="@+id/gouami"
            android:textSize="20dp"
            android:textColor="@color/lemonchiffon"
            android:text="立即购买"
            style="@style/MainStyle"
            android:layout_weight="2"
            />
    </RadioGroup>
</LinearLayout>
